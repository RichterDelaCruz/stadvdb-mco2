<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Details</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Appointment Details</h1>
        <form id="updateForm" action="/update" method="POST" onsubmit="return checkChanges()">
            <input type="hidden" name="apptId" value="{{ appointment.apptid }}">

            <div class="form-group">
                <label>Appointment ID:</label>
                <input type="text" class="form-control" value="{{ appointment.apptid }}" readonly>
            </div>

            <div class="form-group">
                <label>Patient ID:</label>
                <input type="text" name="pxid" class="form-control" value="{{ appointment.pxid }}">
            </div>

            <div class="form-group">
                <label>Doctor ID:</label>
                <input type="text" name="doctorid" class="form-control" value="{{ appointment.doctorid }}">
            </div>

            <div class="form-group">
                <label>Clinic ID:</label>
                <input type="text" name="clinicid" class="form-control" value="{{ appointment.clinicid }}">
            </div>

            <div class="form-group">
                <label>Status:</label>
                <input type="text" name="status" class="form-control" value="{{ appointment.status }}">
            </div>

            <div class="form-group">
                <label>Time Queued:</label>
                <input type="datetime-local" name="timeQueued" class="form-control" value="{{ appointment.timeQueued }}">
            </div>

            <div class="form-group">
                <label>Queue Date:</label>
                <input type="datetime-local" name="queueDate" class="form-control" value="{{ appointment.queueDate }}">
            </div>

            <div class="form-group">
                <label>Start Time:</label>
                <input type="datetime-local" name="startTime" class="form-control" value="{{ appointment.startTime }}">
            </div>

            <div class="form-group">
                <label>End Time:</label>
                <input type="datetime-local" name="endTime" class="form-control" value="{{ appointment.endTime }}">
            </div>

            <div class="form-group">
                <label>Type:</label>
                <input type="text" name="type" class="form-control" value="{{ appointment.type }}">
            </div>

            <div class="form-group">
                <label>Hospital Name:</label>
                <input type="text" name="hospitalName" class="form-control" value="{{ appointment.hospitalName }}">
            </div>

            <div class="form-group">
                <label>Is Hospital:</label>
                <input type="checkbox" name="isHospital" value="1" {{#if appointment.isHospital}}checked{{/if}}>
            </div>

            <div class="form-group">
                <label>City:</label>
                <input type="text" name="city" class="form-control" value="{{ appointment.city }}">
            </div>

            <div class="form-group">
                <label>Province:</label>
                <input type="text" name="province" class="form-control" value="{{ appointment.province }}">
            </div>

            <div class="form-group">
                <label>Region:</label>
                <input type="text" name="regionName" class="form-control" value="{{ appointment.regionName }}">
            </div>

            <div class="form-group">
                <label>Doctor Main Speciality:</label>
                <input type="text" name="doctorMainSpeciality" class="form-control" value="{{ appointment.doctorMainSpeciality }}">
            </div>

            <div class="form-group">
                <label>Doctor Age:</label>
                <input type="number" name="doctorAge" class="form-control" value="{{ appointment.doctorAge }}">
            </div>

            <div class="form-group">
                <label>Patient Age:</label>
                <input type="number" name="pxAge" class="form-control" value="{{ appointment.pxAge }}">
            </div>

            <div class="form-group">
                <label>Patient Gender:</label>
                <select name="pxGender" class="form-control">
                    <option value="MALE" {{#ifCond appointment.pxGender '===' 'MALE'}} selected {{/ifCond}}>Male</option>
                    <option value="FEMALE" {{#ifCond appointment.pxGender '===' 'FEMALE'}} selected {{/ifCond}}>Female</option>
                </select>
            </div>

            <div class="form-group">
                <label>Virtual:</label>
                <input type="checkbox" name="virtual" value="1" {{#if appointment.virtual}}checked{{/if}}>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <form action="/delete" method="POST" class="mt-2">
            <input type="hidden" name="apptId" value="{{ appointment.apptid }}">
            <button type="submit" class="btn btn-danger">Delete Appointment</button>
        </form>
    </div>
    <!-- Optional: Include Bootstrap JS and its dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    function checkChanges() {
        const form = document.getElementById('updateForm');
        const inputs = form.querySelectorAll('input, select');

        let hasChanges = false;

        inputs.forEach(input => {
            if (input.type === 'datetime-local') {
                // Get the initial value from a custom attribute
                const initialValue = input.getAttribute('data-initial-value');
                if (input.value !== initialValue) {
                    hasChanges = true;
                }
            } else if (input.type === 'checkbox' && input.checked !== input.defaultChecked) {
                hasChanges = true;
            } else if (input.type !== 'checkbox' && input.value !== input.defaultValue) {
                hasChanges = true;
            }
        });

        if (!hasChanges) {
            alert('No changes made.');
            return false;
        }

        return true;
    }
</script>

</body>

</html>
