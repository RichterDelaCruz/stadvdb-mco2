<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Details</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Appointment Details</h1>
        <div class="list-group">
            <li class="list-group-item">Appointment ID: {{ appointment.apptid }}</li>
            <li class="list-group-item">Patient ID: {{ appointment.pxid }}</li>
            <li class="list-group-item">Doctor ID: {{ appointment.doctorid }}</li>
            <li class="list-group-item">Clinic ID: {{ appointment.clinicid }}</li>
            <li class="list-group-item">Status: {{ appointment.status }}</li>
            <li class="list-group-item">Time Queued: {{ appointment.timeQueued }}</li>
            <li class="list-group-item">Queue Date: {{ appointment.queueDate }}</li>
            <li class="list-group-item">Type: {{ appointment.type }}</li>
            <li class="list-group-item">City: {{ appointment.city }}</li>
            <li class="list-group-item">Province: {{ appointment.province }}</li>
            <li class="list-group-item">Region: {{ appointment.regionName }}</li>
            <li class="list-group-item">Main Speciality: {{ appointment.doctorMainSpeciality }}</li>
            <li class="list-group-item">Doctor Age: {{ appointment.doctorAge }}</li>
            <li class="list-group-item">Patient Age: {{ appointment.pxAge }}</li>
            <li class="list-group-item">Patient Gender: {{ appointment.pxGender }}</li>
            <li class="list-group-item">Virtual: {{ appointment.virtual }}</li>
        </div>
        <!-- Update Appointment Button -->
        <form action="/update/{{ appointment.apptid }}" method="GET" class="mt-3">
            <button type="submit" class="btn btn-warning">Update Appointment</button>
        </form>
        <!-- Back to Search Button -->
        <a href="/search" class="btn btn-primary mt-3">Back to Search</a>
    </div>
    <!-- Optional: Include Bootstrap JS and its dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
