<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Details</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Appointment Details</h1>
        <form id="updateForm" action="/update" method="POST" onsubmit="return checkChanges()">
            <input type="hidden" name="apptId" value="{{ appointment.apptid }}">

            <div class="form-group">
                <label>Appointment ID:</label>
                <input type="text" class="form-control" value="{{ appointment.apptid }}" readonly>
            </div>

            <div class="form-group">
                <label>Patient ID:</label>
                <input type="text" name="pxid" class="form-control" value="{{ appointment.pxid }}">
            </div>

            <div class="form-group">
                <label>Doctor ID:</label>
                <input type="text" name="doctorid" class="form-control" value="{{ appointment.doctorid }}">
            </div>

            <div class="form-group">
                <label>Clinic ID:</label>
                <input type="text" name="clinicid" class="form-control" value="{{ appointment.clinicid }}">
            </div>

            <div class="form-group">
                <label>Status:</label>
                <input type="text" name="status" class="form-control" value="{{ appointment.status }}">
            </div>

            <div class="form-group">
                <label>Time Queued:</label>
                <input type="datetime-local" name="timeQueued" class="form-control"
                    value="{{ appointment.timeQueued }}">
            </div>

            <div class="form-group">
                <label>Queue Date:</label>
                <!-- Insert the formatted datetime string here -->
                <input type="datetime-local" name="queueDate" class="form-control" value="{{ appointment.queueDate }}">
            </div>

            <div class="form-group">
                <label>Start Time:</label>
                <input type="datetime-local" name="startTime" class="form-control" value="{{ appointment.startTime }}">
            </div>

            <div class="form-group">
                <label>End Time:</label>
                <input type="datetime-local" name="endTime" class="form-control" value="{{ appointment.endTime }}">
            </div>

            <div class="form-group">
                <label>Type:</label>
                <input type="text" name="type" class="form-control" value="{{ appointment.type }}">
            </div>

            <div class="form-group">
                <label>Hospital Name:</label>
                <input type="text" name="hospitalName" class="form-control" value="{{ appointment.hospitalName }}">
            </div>

            <div class="form-group">
                <label>Is Hospital:</label>
                <input type="checkbox" name="isHospital" value="1" {{#if appointment.isHospital}}checked{{/if}}>
            </div>

            <div class="form-group">
                <label>City:</label>
                <input type="text" name="city" class="form-control" value="{{ appointment.city }}">
            </div>

            <div class="form-group">
                <label>Province:</label>
                <input type="text" name="province" class="form-control" value="{{ appointment.province }}">
            </div>

            <div class="form-group">
                <label>Region:</label>
                <input type="text" name="regionName" class="form-control" value="{{ appointment.regionName }}">
            </div>

            <div class="form-group">
                <label>Doctor Main Speciality:</label>
                <input type="text" name="doctorMainSpeciality" class="form-control"
                    value="{{ appointment.doctorMainSpeciality }}">
            </div>

            <div class="form-group">
                <label>Doctor Age:</label>
                <input type="number" name="doctorAge" class="form-control" value="{{ appointment.doctorAge }}">
            </div>

            <div class="form-group">
                <label>Patient Age:</label>
                <input type="number" name="pxAge" class="form-control" value="{{ appointment.pxAge }}">
            </div>

            <div class="form-group">
                <label>Patient Gender:</label>
                <select name="pxGender" class="form-control">
                    <option value="MALE" {{#ifCond appointment.pxGender '===' 'MALE' }} selected {{/ifCond}}>Male
                    </option>
                    <option value="FEMALE" {{#ifCond appointment.pxGender '===' 'FEMALE' }} selected {{/ifCond}}>Female
                    </option>
                </select>
            </div>

            <div class="form-group">
                <label>Virtual:</label>
                <input type="checkbox" name="virtual" value="1" {{#if appointment.virtual}}checked{{/if}}>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <form action="/delete" method="POST" class="mt-2">
            <input type="hidden" name="apptid" value="{{ appointment.apptid }}">
            <input type="hidden" name="pxid" value="{{ appointment.pxid }}">
            <input type="hidden" name="doctorid" value="{{ appointment.doctorid }}">
            <input type="hidden" name="clinicid" value="{{ appointment.clinicid }}">
            <input type="hidden" name="status" value="{{ appointment.status }}">
            <input type="hidden" name="timeQueued" value="{{ appointment.timeQueued }}">
            <input type="hidden" name="queueDate" value="{{ appointment.queueDate }}">
            <input type="hidden" name="startTime" value="{{ appointment.startTime }}">
            <input type="hidden" name="endTime" value="{{ appointment.endTime }}">
            <input type="hidden" name="type" value="{{ appointment.type }}">
            <input type="hidden" name="hospitalName" value="{{ appointment.hospitalName }}">
            <input type="hidden" name="isHospital" value="{{ appointment.isHospital }}">
            <input type="hidden" name="city" value="{{ appointment.city }}">
            <input type="hidden" name="province" value="{{ appointment.province }}">
            <input type="hidden" name="regionName" value="{{ appointment.regionName }}">
            <input type="hidden" name="doctorMainSpeciality" value="{{ appointment.doctorMainSpeciality }}">
            <input type="hidden" name="doctorAge" value="{{ appointment.doctorAge }}">
            <input type="hidden" name="pxAge" value="{{ appointment.pxAge }}">
            <input type="hidden" name="pxGender" value="{{ appointment.pxGender }}">
            <input type="hidden" name="virtual" value="{{ appointment.virtual }}">
            <button type="submit" class="btn btn-danger">Delete Appointment</button>
        </form>
    </div>
    <!-- Optional: Include Bootstrap JS and its dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function checkChanges() {
            const form = document.getElementById('updateForm');
            const inputs = form.querySelectorAll('input, select');

            let hasChanges = false;

            inputs.forEach(input => {
                if (input.type === 'datetime-local') {
                    // Get the initial value from a custom attribute
                    const initialValue = input.getAttribute('data-initial-value');
                    if (input.value !== initialValue) {
                        hasChanges = true;
                    }
                } else if (input.type === 'checkbox' && input.checked !== input.defaultChecked) {
                    hasChanges = true;
                } else if (input.type !== 'checkbox' && input.value !== input.defaultValue) {
                    hasChanges = true;
                }
            });

            if (!hasChanges) {
                alert('No changes made.');
                return false;
            }

            return true;
        }
        // Function to format datetime strings
        function formatDatetime(datetime) {
            // Parse the datetime string
            const date = new Date(datetime);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            const formattedDatetime = `${year}-${month}-${day}T${hours}:${minutes}`;
            return formattedDatetime;
        }

        // Get the datetime-local input element
        const queueDateInput = document.querySelector('input[name="queueDate"]');
        const timeQueuedInput = document.querySelector('input[name="timeQueued"]');
        const startTimeInput = document.querySelector('input[name="startTime"]');
        const endTimeInput = document.querySelector('input[name="endTime"]');

        // Get the appointment's queue date value
        const appointmentQueueDate = '{{ appointment.queueDate }}'; // Replace with the actual value from your server
        const appointmentTimeQueued = '{{ appointment.timeQueued }}'; // Replace with the actual value from your server
        const appointmentStartTime = '{{ appointment.startTime }}'; // Replace with the actual value from your server
        const appointmentEndTime = '{{ appointment.endTime }}'; // Replace with the actual value from your server


        // Format the appointment's queue date and set it as the input value
        queueDateInput.value = formatDatetime(appointmentQueueDate);
        timeQueuedInput.value = formatDatetime(appointmentTimeQueued);
        startTimeInput.value = formatDatetime(appointmentStartTime);
        endTimeInput.value = formatDatetime(appointmentEndTime);
    </script>

</body>

</html>